@model IEnumerable<Web.Models.Tables.Student>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Result</h2>
                </div>
                <div class="panel-body">
                    @foreach (var student in Model)
                    {
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h2 class="panel-title">
                                    Student: @student.FullName
                                </h2>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    @Html.LabelFor(modelItem => student.Section.SectionName, new { @class = "control-label" })
                                    @Html.DisplayFor(modelItem => student.Section.SectionName, new { @class = "control-label" })
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-condensed">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Time type
                                                </th>
                                                <th>
                                                    Time value
                                                </th>
                                                <th>
                                                    Date
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in student.AttendanceDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TimeType.TimeTypeName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Time)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Date)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
