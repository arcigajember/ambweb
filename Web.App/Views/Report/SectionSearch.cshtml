@using PagedList.Mvc
@model PagedList.IPagedList<Web.Models.Tables.Student>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Results</h2>
                </div>
                <div class="panel-body">
                    @foreach (var student in Model)
                    {
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h2 class="panel-title">
                                    Student: @student.FullName
                                </h2>
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-condensed">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Time Type
                                                </th>
                                                <th>
                                                    Time value
                                                </th>
                                                <th>
                                                    Date
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in student.AttendanceDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TimeType.TimeTypeName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Time)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Date)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                
                            </div>
                        </div>
                    }
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("SectionSearch", new { page }),
                                PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "search-result", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
                </div>
            </div>
        </div>
    </div>
</div>