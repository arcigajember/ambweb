@model Web.Models.Tables.Room

<div class="panel panel-danger">
    <div class="panel-heading">
        <h2 class="panel-title">Are you sure you want to delete this?</h2>
    </div>
    <div class="panel-body">
        <div>
            <h4>Room</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.RoomNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RoomNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.RoomName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RoomName)
                </dd>

            </dl>

            @using (Ajax.BeginForm("Delete", "Room", new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Ajax.ActionLink("Back", "Index", "Room", null, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>