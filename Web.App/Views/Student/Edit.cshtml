@model Web.Models.ModelView.StudentDetailsView


<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">
            Information
        </h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h2 class="panel-title">Student</h2>
                    </div>
                    <div class="panel-body">
                        @using (Ajax.BeginForm("Edit", "Student", new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Student.StudentId)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.StudentNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.StudentNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = Model.Student.StudentNumber } })
                                        @Html.ValidationMessageFor(model => model.Student.StudentNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.FirstName, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.LastName, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.MiddleName, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.MiddleName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.Street, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.Street, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.Street, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.Barangay, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.Barangay, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.Barangay, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.Municipality, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.Municipality, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.Municipality, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.Province, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.Province, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.Province, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.ContactNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.ContactNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.Status, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Student.Status, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Student.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Student.Gender, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(model => model.Student.Gender, (List<SelectListItem>)ViewData["gender"], new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Student.Gender, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <input type="submit" value="Save" class="btn btn-primary" /> |
                                        @Ajax.ActionLink("Back", "Index", "Student", null, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-default" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h2 class="panel-title">
                            Guardian
                            <a href="#" id="guardianBtn" title="Guardian" data-toggle="modal" data-id="@Model.Student.StudentId" data-target="#studentModal" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-plus"></span></a>
                        </h2>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            Full name
                                        </th>
                                        <th>
                                            Contact No.
                                        </th>
                                        <th>
                                            Relation
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="guardian-body">
                                    @foreach (var item in Model.Guardian)
                                    {
                                        <tr>
                                            <td id="nr" style="display: none;">
                                                @Html.DisplayFor(model => item.GuardianId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FullName)
                                            </td>
                                            <td>
                                             @Html.DisplayFor(modelItem => item.ContactNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StudentGuardian.Relation)
                                                
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-xs">
                                                    <button id="btn-remove-guardian" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h2 class="panel-title">Section <a href="#" id="sectionBtn" title="Section" data-toggle="modal" data-id="@Model.Student.StudentId" data-target="#studentModal" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-plus"></span></a></h2>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            Section name
                                        </th>
                                        <th>
                                            Room
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                @if (Model.Student.Section != null)
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => Model.Student.Section.SectionName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => Model.Student.Room.RoomDetails)
                                            </td>
                                            <td>
                                                <a title="Remove" href="#" data-toggle="modal" data-target="#goodluck" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_StudentPartial")
<script type="text/javascript">
    $.validator.unobtrusive.parse(document);
    $(document)
        .ready(function () {
            StudentGuardian();
            $("#guardianBtn")
                .click(function () {
                    var studentId = $(this).data("id");
                    $(".modal-body #studentId").val(studentId);
                    $.ajax({
                        type: "GET",
                        url: "/Student/GuardianSelectAll/",
                        contentType: "application/html",
                        cache: false,
                        dataType: "html",
                        success: function (data) {
                            $("#responseDetails").html(data);
                        },
                        error: function (xhr, textStatus, error) {
                            console.log(xhr.statusText);
                            console.log(textStatus);
                            console.log(error);
                        }
                    });
                });

            $("#sectionBtn")
                .click(function () {
                    var studentId = $(this).data("id");
                    $(".modal-body #studentId").val(studentId);
                    $.ajax({
                        type: "GET",
                        url: "/Student/SectionSelectAll/",
                        cache: false,
                        dataType: "html",
                        success: function (data) {
                            $("#responseDetails").html(data);
                        }
                    });
                });
        });
</script>
