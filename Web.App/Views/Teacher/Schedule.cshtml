@model Web.Models.ModelView.TeacherScheduleView

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Teacher Schedule @Ajax.ActionLink(" ", "ScheduleAssign", "Teacher", new { id = Model.Teacher.TeacherId }, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "glyphicon glyphicon-plus" })</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Teacher.FullName)
                    @Html.EditorFor(model => model.Teacher.FullName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @foreach (var item in Model.SubjectSectionView)
                {
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h2 class="panel-title">
                                Subject: @item.Subject.SubjectName - @item.Subject.Description
                            </h2>
                        </div>
                        <div class="panel-body">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h2 class="panel-title">Section List</h2>
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-condensed">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Section
                                                    </th>
                                                    <th>
                                                        Room
                                                    </th>
                                                    <th>
                                                        Action
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var set in item.Section)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => set.SectionName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => set.Room.RoomNumber)
                                                            @Html.DisplayFor(modelItem => set.Room.RoomName)
                                                        </td>
                                                        <td>
                                                            <a title="Remove" href="#" data-toggle="modal" data-target="#goodluck" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-0 col-md-12">
                                    <a href="#" data-toggle="modal" data-target="#goodluck" class="btn btn-primary">Add</a> |
                                    @Ajax.ActionLink("Back", "Index", "Teacher", null, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-info" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>