@using PagedList.Mvc
@model PagedList.IPagedList<Web.Models.Tables.Guardian>

@using (Ajax.BeginForm("Index", "Guardian", new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }))
{
    <p>
        Find by name: @Html.TextBox("searchString", ViewBag.GuardianFilter as string, new { @class = "form-control" })
    </p>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Guardian List @Ajax.ActionLink(" ", "Create", "Guardian", null, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "glyphicon glyphicon-plus" })</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>
                        First name
                    </th>
                    <th>
                        Last name
                    </th>
                    <th>
                        MI
                    </th>
                    <th>
                        Street
                    </th>
                    <th>
                        Barangay
                    </th>
                    <th>
                        Municipality
                    </th>
                    <th>
                        Province
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Barangay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Municipality)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Province)
                        </td>
                        <td>
                            <div class="btn-group btn-group-xs">
                                @Ajax.ActionLink("Edit", "Edit", "Guardian", new { id = item.GuardianId }, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-info" })
                                @Ajax.ActionLink("Details", "Details", "Guardian", new { id = item.GuardianId }, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-info" })
                                @Ajax.ActionLink("Delete", "Delete", "Guardian", new { id = item.GuardianId }, new AjaxOptions { UpdateTargetId = "ajaxDetails", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.GuardianFilter }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "ajaxDetails", HttpMethod = "GET", InsertionMode = InsertionMode.Replace }))
    </div>
</div>