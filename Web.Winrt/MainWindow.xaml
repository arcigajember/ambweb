<Window x:Class="Web.Winrt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Web.Winrt"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="525"
        Height="350"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Controls">
            <StackPanel Margin="3" Orientation="Vertical">
                <Button Name="BtnMain"
                        Height="20"
                        Margin="2"
                        HorizontalContentAlignment="Center"
                        Click="BtnMain_OnClick"
                        Content="Main" />
                <Button Name="BtnStudent"
                        Height="20"
                        Margin="2"
                        HorizontalContentAlignment="Center"
                        Click="BtnStudent_OnClick"
                        Content="Student" />
            </StackPanel>
        </GroupBox>
        <Grid Name="MainGrid" Grid.Column="1" />
    </Grid>
</Window>
